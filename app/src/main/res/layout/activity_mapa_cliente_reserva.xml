<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapaClienteReserva">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:contentPadding="16dp"
        android:layout_margin="19dp">
        
        
        <TextView
            android:id="@+id/textViewStatusReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado"/>










        
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            ></fragment>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewClienteReserva"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:src="@drawable/icons8_usuario_agenda"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textViewOriginConductorReserva"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lugar de Recogida"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/textViewDestinationConductorReserva"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Destino"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/textViewConductorReserva"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre conductor"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:textSize="16sp"/>



                    <TextView
                        android:id="@+id/textViewEmailConductorReserva"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email conductor"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:textSize="16sp"/>









                </LinearLayout>







            </LinearLayout>




        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>